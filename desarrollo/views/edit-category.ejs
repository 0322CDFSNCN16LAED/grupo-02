<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('./partials/head') %>
    <title>Editar Categoría</title>
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="/css/styles-reg-log.css" />
</head>

<body>
  <!-- Inicio Header importado -->
  <header>
    <%- include('./partials/header-logo') %>
  </header>
  <main>
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h1 class="titulo-crear">
            Editar categoría:
          </h1>
        </div>
      </div>
      <div class="col-12">
        <form action="/category/edit/<%= categorias.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="row product-detail">
            <div class="col-12 col-md-6">
              <label for="nombre" class="form-label">Nombre:</label>
              <input type="text" id="nombre" name="nombre" class="cajas" value="<%= categorias.nombre %>" />
            </div>
            <div class="col-12 col-md-6">
              <label for="categoria" class="form-label">Categoría:</label>
              <select class="cajas" id="idCategorias" name="idCategorias">
                <% categorias.forEach(categoria => {%>
                  <option value="<%= categoria.id %>" <%= categorias.idCategorias == categoria.id ? 'selected' : '' %>>
                    <%=categoria.nombre%>
                  </option>
                  <%}) %>
            </div>
            <div class="col-12 col-md-6">
              <label for="imagen" class="form-label">Imagen de Categoría:</label>
              <img src="<%= categorias.imagen %>" alt="" style="width: 20%; text-align: center;">
              <input type="file" name="imagen" id="imagen" class="cajas" accept="image/*">
            </div>
          </div>
          <div class="col-12">
            <input type="submit" class="btn" value="EDITAR" />
          </div>
        </form>
      </div>
      <!-- ELIMINAR -->
      <div class="col-12">
        <form action="/category/<%= categorias.id %>?_method=DELETE" method="POST" class="col-12">
          <input type="submit" class="btn" value="BORRAR" />
        </form>
      </div>
      <!-- FIN ELIMINAR -->
    </div>

  </main>
  <!-- Comienzo footer -->
  <footer>
    <%- include ('./partials/footer-form') %>
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
    integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js"
    integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy"
    crossorigin="anonymous"></script>
</body>

</html>