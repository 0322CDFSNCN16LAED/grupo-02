===================================================================================================
*/
    let open = document.getElementById("open_modal_product");
    let open_02 = document.getElementById("open_modal_02_product");
    let close = document.getElementById("close_modal_product");
    let close_02 = document.getElementById("close_modal_02_product");
    let container = document.getElementById("div_modal_container_product");
    let container_02 = document.getElementById("div_modal_02_container_product");

    open.addEventListener("click", () => {
        container.classList.add("show");
    });
    open_02.addEventListener("click", () => {
        container_02.classList.add("show");
    });
    close.addEventListener("click", () => {
        container.classList.remove("show");
    });
    close_02.addEventListener("click", () => {
        container_02.classList.remove("show");
    });
</script>
