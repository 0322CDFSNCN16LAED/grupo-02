<script>
    function change_image(image) {
        let id_img = document.getElementById("img_big_product");
        let auxiliar;
        switch (image) {
            case 1:
                auxiliar = "/images/products/uno.jpg";
                break;
            case 2:
                auxiliar = "/images/products/dos.jpg";
                break;
            case 3:
                auxiliar = "/images/products/tres.jpg";
                break;
            case 4:
                auxiliar = "/images/products/cuatro.jpg";
                break;
            case 5:
                auxiliar = "/images/products/cinco.jpg";
                break;
            case 6:
                auxiliar = "/images/products/seis.jpg";
                break;
        }
        id_img.src = auxiliar;
    }
/*
