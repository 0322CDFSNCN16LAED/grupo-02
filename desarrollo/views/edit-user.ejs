<!DOCTYPE html>
<html lang="es">

<head>
  <%- include('./partials/head') %>
    <title>Editar usuario</title>
    <link rel="stylesheet" href="/css/bootstrap-grid.min.css" />
    <link href="/css/styles-reg-log.css" rel="stylesheet" />
</head>

<body>
  <!-- Inicio Header importado -->
  <header>
    <%- include('./partials/header-logo') %>
  </header>
  <main>
    <form class="container" action="/user/<%= usuario.id %>?_method=PUT" method="POST">
      <h1 class="form-label">
        Editar el usuario existente id <%= usuario.id %>
      </h1>
      <div class="row product-detail">
        <div class="col-12 col-md-6">
          <label for="nombre" class="form-label">Nombre:</label>
          <input type="text" id="nombre" name="nombre" class="cajas" value="<%= usuario.nombre %>" />
        </div>
        <div class="col-12 col-md-6">
          <label for="apellido" class="form-label">Apellido:</label>
          <input type="text" id="apellido" name="apellido" class="cajas" value="<%= usuario.apellido %>" />
        </div>
        <div class="col-12 col-md-6">
          <label for="email" class="form-label">Email:</label>
          <input type="email" id="email" name="email" class="cajas" value="<%= usuario.email%>" />
        </div>
        <div class="col-12 col-md-6">
          <label for="domicilio" class="form-label">Domicilio:</label>
          <input class="cajas" type="text" id="domicilio" name="domicilio" maxlength="30"
            value="<%= usuario.domicilio%>" />
        </div>
        <div class="col-12 col-md-6">
          <label for="ciudad" class="form-label">Ciudad:</label>
          <input class="cajas" type="text" id="ciudad" name="ciudad" maxlength="30" value="<%=usuario.ciudad%>" />
        </div>
        <div class="col-12">
          <label for="imagen" class="form-label">Imagen de perfil:</label>
          <img src="<%=usuario.imagen%>" alt="" style="width: 20%; text-align: center;">
          <input type="file" name="imagen" class="cajas" accept="image/*">
        </div>
        <div class="col-12 col-md-6">
          <label for="contrasena" class="form-label">Contraseña:</label>
          <input class="cajas" type="password" id="password" name="password" maxlength="30" />
        </div>
        <!-- RESTA IMPLEMENTAR VALIDACION DE CAMBIO DE PASSWORD POR EMAIL -->
        <div class="col-12 col-md-6">
          <label for="categoria" class="form-label">Categoría:</label>
          <select class="cajas" id="idUsuarioCategorias" name="idUsuarioCategorias">
            <% categorias.forEach(categoria=> {%>
              <option value="<%=categoria.id%>">
                <%=categoria.nombre%>
              </option>
              <%}) %>
        </div>
        <div>
          <input type="submit" class="col-md-12 btn" value="EDITAR" />
        </div>
    </form>
  </main>
  <!-- Comienzo footer -->
  <footer>
    <%- include ('./partials/footer-form') %>
  </footer>
</body>

</html>