    <main>
        <!-- INICIA BARRA CARRITO -->
        <div class="main">
            <div class="ubica-barra">
                <div class="navegador">
                    <div class=""><a href="/cart" class="mis-compras">Mis Compras</a></div>
                    <div class=""><a href="/envio" class="envios">Envíos</a></div>
                    <div class=""><a href="/pago" class="pagos">Pagos</a></div>
                </div>
            </div>
            <!-- FINALIZA BARRA CARRITO -->
            <h2 class="product-carrito mb-20 pt-20 ml-20">Detalle de pagos:</h2>

            <div class="container">

                <form class="mobile ml-20 ">
                    <div class="bk-tarjeta">
                        <div class="form-tarjeta">
                            <p class="ml-20 pt-10 mb-10">Tarjeta de crédito:</p>
                            <div class="entre-linea ">
                                <div class="ds-flex fx-wrap js-cont-a">
                                    <input type="nombre" name="nombre"
                                        class="titular media-mobile espacio-mobile p-lateral border-radius height-25 titular-tarj sinborde"
                                        placeholder="Nombre">
                                    <input type="Apellido" name="apellido"
                                        class="titular titular-tarj media-mobile p-lateral  border-radius height-25 sinborde mb-20"
                                        placeholder="Apellido">
                                </div>
                            </div>

                            <div class="entre-linea ds-flex fx-wrap js-cont-a">
                                <input type="number" name="number1"
                                    class=" text-align number-credit media-mobile espacio-mobile border-radius height-25 sinborde"
                                    placeholder="0000" maxlength="4"
                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" />

                                <input type="number" name="number2"
                                    class=" espacio-mobile text-align number-credit media-mobile border-radius height-25 sinborde"
                                    placeholder="0000" maxlength="4"
                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" />

                                <input type="number" name="number3"
                                    class=" text-align number-credit media-mobile border-radius height-25 sinborde"
                                    placeholder="0000" maxlength="4"
                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" />

                                <input type="number" name="number4"
                                    class=" mb-10 text-align number-credit media-mobile border-radius height-25 sinborde"
                                    placeholder="000" maxlength="4"
                                    oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" />
                            </div>
                            
                                <div class="entre-linea ds-flex js-cont-a mt-15">
                                    
                                    <div class="ds-block">
                                    <input type="number" name="date-venc" id="mesvence" class="text-align date-venc media-mobile border-radius mb-20 height-25 sinborde" placeholder="MES">
                                <input type="number" name="date-venc" id="aniovence" class="text-align date-venc media-mobile border-radius mb-20 height-25 sinborde" placeholder="AÑO">
                                    </div>
                                    <div class="ds-block">
                                    <input type="number" name="cod-seguridad"
                                        class="number-credit border-radius height-25 sinborde text-align mb-20" placeholder="123" maxlength="3"
                                        oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" />
                                     </div>   
                                </div>
                        </div>
                    </div>

                    <div>
                        <label for="paypal" class="boton-paypal p-10 mt-15 mb-50 ds-flex">
                            <input type="radio" name="paypal" id="paypal" value="paypal" class="input-radio">
                            <img src="../images/paypal.png" alt="paypal" width="30%" class="img-paypal">
                        </label>
                    </div>

                </form>
                <div class="desktop fx-wrap fondo-carro">
                    <!--este llevar a la derecha-->
                    <div class="fx-dir-col">
                        <table class="border-collapse pb-10 product-selec">
